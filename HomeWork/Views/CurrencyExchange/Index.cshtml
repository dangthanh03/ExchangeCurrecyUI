@model string[]

<!DOCTYPE html>
<html>
<head>
    <title>Currency Exchange</title>
    <!-- Thêm link CSS của Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Currency Exchange</h1>
        <form asp-controller="CurrencyExchange" asp-action="ExchangeCurrency" method="post">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="currencyPair">Currency Pair:</label>
                <select id="currencyPair" name="currencyPair" class="form-control" required>
                    <option value="">Select Currency Pair</option>
                    @foreach (var currencyPair in Model)
                    {
                        <option value="@currencyPair">@currencyPair</option>
                    }
                </select>
            </div>
            <div class="form-group">

                @if (@ViewBag.OriginalAmount != null && @ViewBag.ExchangedAmount != null)
                {
                    <div style="border: 0.5px solid #000; padding: 10px;margin-top:10px">
                        <p>Original Amount(@ViewBag.CurrencyPair): @ViewBag.OriginalAmount.ToString("N2")</p>
                        <p>Exchanged Amount(VND): @ViewBag.ExchangedAmount.ToString("N2")</p>
                    </div>
                }
                else
                {
                    <div style="border: 0.5px solid #000; padding: 10px;margin-top:10px">
                    <p>Original Amount: @ViewBag.OriginalAmount</p>
                    <p>Exchanged Amount: @ViewBag.ExchangedAmount</p>
                    </div>
                }

            </div>
            <button type="submit" class="btn btn-primary">Exchange Currency</button>
        </form>
    </div>

    <!-- Thêm script của Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
